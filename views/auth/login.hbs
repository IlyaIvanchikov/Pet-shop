<div class="row auth">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
      <li class="tab col s6"><a href="#register">Зарегистрироваться</a></li>
    </ul>
  </div>
  <div id="login" class="col s6 offset-s3">
    {{#if LoginError}}
    <p class="alert">{{LoginError}}</p>
    {{/if}}
    <h1>Вход</h1>
    <form action="/auth/login" method="POST">
      <div class="input-field">
        <input placeholder="login" name="login" id="login" type="text" class="validate" required>
        <label class="label" for="login"><p>Пожауйста введите логин</p></label>
        <span class="helper-text" data-error="Wrong" data-success="Success"></span>
      </div>
      <div class="input-field">
        <input placeholder="password" name="password" id="password" type="password" class="validate" required>
        <label for="password">Пожауйста введите пароль</label>
        <span class="helper-text" data-error="Wrong" data-success="Success"></span>
      </div>
      <button class="btn waves-effect waves-light" type="submit">Войти
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
  <div id="register" class="col s6 offset-s3">
      <h1>Регистрация</h1>
    <form action="/auth/register" method="POST">
      <div class="input-field">
        <input placeholder="login" name="login" id="relogin" type="text" class="validate" required>
        <label for="login">Пожауйста введите логин</label>
        <span class="helper-text" data-error="Wrong" data-success="Success"></span>
      </div>
      <div class="input-field">
        <input placeholder="email" name="email" id="email" type="email" class="validate" required>
        <label for="email">Пожауйста введите email</label>
        <span class="helper-text" data-error="Wrong" data-success="Success"></span>
      </div>
      <div class="input-field">
        <input placeholder="password" name="password" id="repassword" type="password" class="validate" required>
        <label for="password">Пожауйста введите пароль</label>
        <span class="helper-text" data-error="Wrong" data-success="Success"></span>
      </div>
      <button class="btn waves-effect waves-light" type="submit">Зарегистрироваться
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>